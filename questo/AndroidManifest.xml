<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.questo.android" android:versionCode="1"
	android:versionName="1.0">
	<application android:icon="@drawable/icon" android:label="@string/app_name"
		android:theme="@style/QuestoTheme" android:name="App">
		<uses-library android:name="com.google.android.maps" />
		<activity android:name=".Launcher">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".HomeView" android:screenOrientation="portrait"></activity>
		<activity android:name=".TutorialView" android:screenOrientation="portrait"></activity>
		<activity android:name=".ProfileView"></activity>
		<activity android:name=".view.ProfileTabThrophies"></activity>
		<activity android:name=".view.ProfileTabTournaments"></activity>
		<activity android:name=".view.ProfileTabPlaces"></activity>
		<activity android:name=".TrophyView"></activity>
		<activity android:name=".TrophyRoomView"></activity>
		<activity android:name=".CompanionsView"
			android:windowSoftInputMode="adjustPan"></activity>
		<activity android:name=".AddCompanionView"></activity>
		<activity android:name=".InviteView"></activity>
		<activity android:name=".CompanionRequestsView"></activity>
		<activity android:name=".PlaceDetailsView"
			android:screenOrientation="portrait"></activity>
		<activity android:name=".QuestionView"></activity>
		<activity android:name=".QuestionResult"></activity>
		<activity android:name=".QuestCompleteView"></activity>
		<activity android:name=".QuestMapView"></activity>
		<activity android:name=".QuestListView"></activity>
		<activity android:name=".ReportQuestionView"></activity>
		<activity android:name=".LoginView"></activity>
		<activity android:name=".TournamentsView"></activity>
		<activity android:name=".TournamentRequestView"></activity>
		<activity android:name=".NewTournamentView"
			android:windowSoftInputMode="adjustPan"></activity>
		<activity android:name=".CompanionChooserView"
			android:windowSoftInputMode="adjustPan"></activity>
		<activity android:name=".TournamentDetailsView"></activity>
		<activity android:name=".SettingsView" android:theme="@style/PreferencesStyle"
			android:screenOrientation="portrait"></activity>
		<supports-screens android:largeScreens="true"
			android:normalScreens="true" android:smallScreens="true"
			android:anyDensity="true" />
		<activity android:name=".AddPlace">
		</activity>
		<activity android:name=".AddQuestion"></activity>
		<activity android:name=".TournamentMapView"></activity>
	</application>
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_LOCATION" />
	<uses-permission android:name="android.permission.ACCESS_GPS" />
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
	<uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION" />
	<uses-permission android:name="android.permission.VIBRATE" />
	<uses-sdk android:targetSdkVersion="4" android:minSdkVersion="4"></uses-sdk>
</manifest>
