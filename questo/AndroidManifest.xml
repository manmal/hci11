<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.questo.android"
      android:versionCode="1"
      android:versionName="1.0">
	<application android:icon="@drawable/icon" android:label="@string/app_name"
		android:theme="@android:style/Theme.NoTitleBar">
		<uses-library android:name="com.google.android.maps" />
		<activity android:name=".QuestoHome" android:label="@string/app_name"
			android:theme="@android:style/Theme.NoTitleBar"
			android:screenOrientation="portrait">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".UserProfile"></activity>
		<activity android:name=".view.ProfileTabThrophies"></activity>
		<activity android:name=".view.ProfileTabTournaments"></activity>
		<activity android:name=".view.ProfileTabPlaces"></activity>
		<activity android:name=".Throphy"></activity>
		<activity android:name=".PlaceDetailsView"></activity>
		<activity android:name=".QuestionView"></activity>
		<activity android:name="QuestMapView"></activity>
		<activity android:name=".QuestListView"></activity>
		<activity android:name=".TournamentView"></activity>
		<activity android:name=".TournamentRequestView"></activity>
	</application>	
	<uses-permission android:name="android.permission.INTERNET" />	
	<uses-permission android:name="android.permission.ACCESS_LOCATION"/>
	<uses-permission android:name="android.permission.ACCESS_GPS"/>
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
	<uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION"/>	
	<uses-sdk android:targetSdkVersion="4" android:minSdkVersion="4"></uses-sdk>
</manifest>