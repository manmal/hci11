<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<item>
		<shape android:shape="rectangle">
			<solid android:color="@color/winered_verydark" />
		</shape>
	</item>
	<item android:bottom="1px">
		<shape android:shape="rectangle">
			<solid android:color="#FFFFFF" />
		</shape>
	</item>
	<item android:top="1px" android:bottom="1px">
		<shape android:shape="rectangle">
			<gradient android:startColor="@color/papyrus_start"
				android:endColor="@color/papyrus_end" android:type="linear"
				android:angle="270" android:dither="true" />
		</shape>
	</item>
</layer-list>