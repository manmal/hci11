<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

	<item android:id="@android:id/background">
		<shape>
			<gradient android:startColor="#80000000" android:centerY="0.75"
				android:endColor="#dd000000" android:angle="270" />
			<corners android:radius="3dp" />
		</shape>
	</item>
	<item android:id="@android:id/progress">
		<clip>
			<shape>
				<gradient android:startColor="@color/green"
					android:endColor="@color/green_shadowed" android:angle="90" />
				<corners android:radius="3dp" />
				<stroke android:width="2px" color="#80000000" />
			</shape>
		</clip>
	</item>

</layer-list>