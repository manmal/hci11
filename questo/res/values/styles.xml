<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="WhiteShadowedFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>  
    </style>
    <style name="TopBarFont" parent="@style/WhiteShadowedFont">
        <item name="android:typeface">serif</item>
        <item name="android:textSize">35sp</item>
    </style>
    <style name="TopBarButtonFont" parent="@style/WhiteShadowedFont">
        <item name="android:typeface">serif</item>
        <item name="android:textSize">20sp</item>
    </style>   
    <style name="NotificationZoneFont" parent="@style/WhiteShadowedFont">
        <item name="android:typeface">sans</item>
        <item name="android:textSize">15sp</item> 
    </style> 
</resources>