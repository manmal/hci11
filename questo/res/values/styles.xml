<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="WhiteShadowedFont" parent="@android:style/TextAppearance.Medium">
		<item name="android:textColor">@android:color/white</item>
		<item name="android:shadowColor">@android:color/black</item>
		<item name="android:shadowDx">1</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowRadius">1</item>
	</style>
	<style name="BlackShadowedFont" parent="@android:style/TextAppearance.Medium">
		<item name="android:textColor">@android:color/black</item>
		<item name="android:shadowColor">@color/light_text_shadow</item>
		<item name="android:shadowDx">1</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowRadius">1</item>
	</style>
	<style name="TopBarFont" parent="@style/WhiteShadowedFont">
		<item name="android:typeface">sans</item>
		<item name="android:textSize">23sp</item>
	</style>
	<style name="TopBarButtonFont" parent="@style/WhiteShadowedFont">
		<item name="android:typeface">sans</item>
		<item name="android:textSize">15sp</item>
	</style>
	<style name="HomeIconFont" parent="@style/BlackShadowedFont">
		<item name="android:textSize">14sp</item>
	</style>
	<style name="QuestionHeader" parent="@style/BlackShadowedFont">
		<item name="android:textSize">20sp</item>
		<item name="android:textStyle">bold</item>
	</style>
	<style name="PlaceDetails" parent="@style/BlackShadowedFont">
		<item name="android:textSize">15sp</item>
	</style>
	<style name="NormalBlackFont" parent="@style/BlackShadowedFont">
		<item name="android:textSize">15sp</item>
	</style>
	<style name="QuestListFont" parent="@style/WhiteShadowedFont">
		<item name="android:textSize">15sp</item>
	</style>
	<style name="TournamentListFont" parent="@style/WhiteShadowedFont">
		<item name="android:textSize">16sp</item>
	</style>
	<style name="QuestionContent" parent="@style/BlackShadowedFont">
		<item name="android:textSize">16sp</item>
	</style>
	<style name="NotificationZoneFont" parent="@style/WhiteShadowedFont">
		<item name="android:typeface">sans</item>
		<item name="android:textSize">15sp</item>
	</style>
	<style name="RoundButton" parent="@style/WhiteShadowedFont">
		<item name="android:typeface">sans</item>
		<item name="android:background">@drawable/btnstate_round</item>
		<item name="android:gravity">center_vertical|center_horizontal</item>
	</style>
	<style name="RoundButtonAlternative" parent="@style/WhiteShadowedFont">
		<item name="android:typeface">sans</item>
		<item name="android:background">@drawable/btnstate_round_altern</item>
	</style>
	<style name="BigRoundButton" parent="@style/RoundButton">
		<item name="android:textSize">18sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:padding">20dp</item>
	</style>
	<style name="BigRoundButtonAlternative" parent="@style/RoundButtonAlternative">
		<item name="android:textSize">18sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:padding">20dp</item>
	</style>
	<style name="MediumRoundButton" parent="@style/RoundButton">
		<item name="android:textSize">16sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:paddingLeft">30dp</item>
		<item name="android:paddingRight">30dp</item>
		<item name="android:paddingTop">12dp</item>
		<item name="android:paddingBottom">12dp</item>
	</style>
	<style name="MediumRoundButtonAlternative" parent="@style/RoundButtonAlternative">
		<item name="android:textSize">16sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:paddingLeft">30dp</item>
		<item name="android:paddingRight">30dp</item>
		<item name="android:paddingTop">12dp</item>
		<item name="android:paddingBottom">12dp</item>
	</style>
	<style name="SmallRoundButton" parent="@style/RoundButton">
		<item name="android:textSize">15sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:paddingLeft">15dp</item>
		<item name="android:paddingRight">15dp</item>
		<item name="android:paddingTop">10dp</item>
		<item name="android:paddingBottom">10dp</item>
	</style>
	<style name="SmallRoundButtonAlternative" parent="@style/RoundButtonAlternative">
		<item name="android:textSize">15sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:paddingLeft">12dp</item>
		<item name="android:paddingRight">12dp</item>
		<item name="android:paddingTop">10dp</item>
		<item name="android:paddingBottom">10dp</item>
	</style>
	<style name="PreferencesStyle" parent="android:Theme.Light">
		<item name="android:listViewStyle">@style/Widget.ListView</item>
		<item name="android:windowNoTitle">true</item>
	</style>

	<style name="Widget" parent="android:Widget">
	</style>
	
	<style name="Widget.ListView">
		<!-- <item name="android:background">@drawable/bg_papyrus</item>-->
		<item name="android:divider">@color/winered_light</item>
		<item name="android:dividerHeight">2dip</item>
	</style>
</resources>