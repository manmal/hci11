<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="WhiteShadowedFont" parent="@android:style/TextAppearance.Medium">
		<item name="android:textColor">@android:color/white</item>
		<item name="android:shadowColor">@android:color/black</item>
		<item name="android:shadowDx">1</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowRadius">1</item>
	</style>
	<style name="BlackShadowedFont" parent="@android:style/TextAppearance.Medium">
		<item name="android:textColor">@android:color/black</item>
		<item name="android:shadowColor">#ffeded</item>
		<item name="android:shadowDx">1</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowRadius">1</item>
	</style>
	<style name="TopBarFont" parent="@style/WhiteShadowedFont">
		<item name="android:typeface">serif</item>
		<item name="android:textSize">35sp</item>
	</style>
	<style name="TopBarButtonFont" parent="@style/WhiteShadowedFont">
		<item name="android:typeface">serif</item>
		<item name="android:textSize">20sp</item>
	</style>
	<style name="HomeIconFont" parent="@style/BlackShadowedFont">
		<item name="android:textSize">14sp</item>
	</style>
	<style name="NotificationZoneFont" parent="@style/WhiteShadowedFont">
		<item name="android:typeface">sans</item>
		<item name="android:textSize">15sp</item>
	</style>
	<style name="RoundButton" parent="@style/WhiteShadowedFont">
		<item name="android:typeface">sans</item>
		<item name="android:background">@drawable/btnstate_round</item>
		<item name="android:gravity">center_vertical|center_horizontal</item>
	</style>
	<style name="RoundButtonAlternative" parent="@style/WhiteShadowedFont">
		<item name="android:typeface">sans</item>
		<item name="android:background">@drawable/btnstate_round_altern</item>
	</style>
	<style name="BigRoundButton" parent="@style/RoundButton">
		<item name="android:textSize">18sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:padding">20dp</item>
	</style>
	<style name="BigRoundButtonAlternative" parent="@style/RoundButtonAlternative">
		<item name="android:textSize">18sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:padding">20dp</item>
	</style>
	<style name="MediumRoundButton" parent="@style/RoundButton">
		<item name="android:textSize">16sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:paddingLeft">30dp</item>
		<item name="android:paddingRight">30dp</item>
		<item name="android:paddingTop">12dp</item>
		<item name="android:paddingBottom">12dp</item>
	</style>
	<style name="MediumRoundButtonAlternative" parent="@style/RoundButtonAlternative">
		<item name="android:textSize">16sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:paddingLeft">30dp</item>
		<item name="android:paddingRight">30dp</item>
		<item name="android:paddingTop">12dp</item>
		<item name="android:paddingBottom">12dp</item>
	</style>
	<style name="GreenProgressbar">
		<item name="android:indeterminateDrawable">@drawable/bg_progressbar</item>
		<item name="android:minWidth">8dp</item>
		<item name="android:maxWidth">8dp</item>
		<item name="android:minHeight">8dp</item>
		<item name="android:maxHeight">8dp</item>
	</style>
</resources>