<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="WhiteShadowedFont" parent="@android:style/TextAppearance.Medium">
		<item name="android:textColor">@android:color/white</item>
		<item name="android:shadowColor">@android:color/black</item>
		<item name="android:shadowDx">1</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowRadius">1</item>
	</style>
	<style name="BlackShadowedFont" parent="@android:style/TextAppearance.Medium">
		<item name="android:textColor">@android:color/black</item>
		<item name="android:shadowColor">#ccccca</item>
		<item name="android:shadowDx">1</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowRadius">1</item>
	</style>
	<style name="TopBarFont" parent="@style/WhiteShadowedFont">
		<item name="android:typeface">serif</item>
		<item name="android:textSize">35sp</item>
	</style>
	<style name="TopBarButtonFont" parent="@style/WhiteShadowedFont">
		<item name="android:typeface">serif</item>
		<item name="android:textSize">20sp</item>
	</style>
	<style name="NotificationZoneFont" parent="@style/WhiteShadowedFont">
		<item name="android:typeface">sans</item>
		<item name="android:textSize">15sp</item>
	</style>
	<style name="RoundButton" parent="@style/WhiteShadowedFont">
		<item name="android:typeface">sans</item>
		<item name="android:background">@drawable/btnstate_biground</item>
	</style>
	<style name="BigRoundButton" parent="@style/RoundButton">
		<item name="android:textSize">18sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:padding">20dp</item>
	</style>
	<style name="MediumRoundButton" parent="@style/RoundButton">
		<item name="android:textSize">16sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:paddingLeft">30dp</item>
		<item name="android:paddingRight">30dp</item>
		<item name="android:paddingTop">12dp</item>
		<item name="android:paddingBottom">12dp</item>
	</style>
</resources>