<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:questo="http://schemas.android.com/apk/res/com.questo.android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@drawable/bg_papyrus"
	android:id="@+id/quest_complete">
	<com.questo.android.view.TopBar
		android:id="@+id/topbar" android:layout_width="fill_parent"
		android:layout_height="wrap_content" questo:label_centered="true">
	</com.questo.android.view.TopBar>
	<ScrollView android:id="@+id/scroll_view"
		android:layout_width="fill_parent" android:layout_height="fill_parent">
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:orientation="vertical">
			<TextView android:id="@+id/txt_congrats"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:text="Congratulations!" style="@style/BlackShadowedFont"
				android:textSize="35sp" />
			<TextView android:id="@+id/txt_congrats_details"
				android:layout_width="fill_parent" android:textSize="15sp"
				android:layout_height="wrap_content" android:textColor="#000" />
			<TextView android:id="@+id/txt_points" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
				android:textColor="#000" />
			<Button android:id="@+id/btn_quest_complete"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal|center_vertical" android:text="Finish Quest!"
				style="@style/BigRoundButton" />
		</LinearLayout>
	</ScrollView>
</LinearLayout>    
