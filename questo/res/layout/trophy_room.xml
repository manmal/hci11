<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:questo="http://schemas.android.com/apk/res/com.questo.android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical">
	<com.questo.android.view.TopBar
		android:id="@+id/topbar" android:layout_width="fill_parent"
		android:layout_height="wrap_content" questo:label="@string/trophyroom"
		questo:label_centered="true" />
	<ScrollView android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:fillViewport="true">
		<GridView xmlns:android="http://schemas.android.com/apk/res/android"
			android:id="@+id/trophy_grid" android:background="@drawable/bg_papyrus"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:layout_marginTop="15dip" android:columnWidth="90dp"
			android:numColumns="3" android:horizontalSpacing="10dp"
			android:verticalSpacing="30dp" android:stretchMode="columnWidth"
			android:gravity="center" android:listSelector="@android:color/transparent">
		</GridView>
	</ScrollView>
</LinearLayout>