<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:questo="http://schemas.android.com/apk/res/com.questo.android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:background="@color/papyrus_start">
	<com.questo.android.view.TopBar
		android:id="@+id/topbar" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_marginBottom="20dip"
		questo:label="@string/add_place" questo:label_centered="true" />
	<TextView android:id="@+id/AddPlaceNameLabel"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:textSize="15sp" android:textColor="#000000" android:text="Name:"
		android:layout_below="@id/topbar" android:layout_alignBaseline="@id/AddPlaceNameLabel" />
	<EditText android:id="@+id/AddPlaceName" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:textSize="15sp"
		android:textColor="#000000" android:text=""
		android:layout_below="@id/topbar" android:layout_toRightOf="@id/AddPlaceNameLabel" 
		android:layout_alignBaseline="@id/AddPlaceNameLabel"/>
	<AbsoluteLayout android:id="@+id/QuestMapLayout"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:layout_below="@id/AddPlaceName">
		<com.google.android.maps.MapView
			android:id="@+id/AddPlaceMap" android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:enabled="true"
			android:clickable="true" android:apiKey="@string/apikey"
			android:layout_below="@id/topbar" />
	</AbsoluteLayout>
	<Button android:id="@+id/AddPlaceCancelBtn"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:text="Cancel" android:layout_alignParentBottom="true" />
	<Button android:id="@+id/AddPlaceCreateBtn"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_toRightOf="@id/AddPlaceCancelBtn"
		android:layout_alignParentBottom="true"
		android:layout_alignParentRight="true" android:text="Create Place" 
		android:layout_below="@id/AddPlaceMap"/>
</RelativeLayout>