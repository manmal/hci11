<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:questo="http://schemas.android.com/apk/res/com.questo.android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical" android:background="@drawable/bg_papyrus">
	<com.questo.android.view.TopBar
		android:id="@+id/topbar" android:layout_width="fill_parent"
		android:layout_height="wrap_content" questo:label="Invite Friend"
		questo:label_centered="true" />
	<EditText android:id="@+id/email_box" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_marginLeft="10dip"
		android:layout_marginRight="10dip" android:layout_marginTop="10dip"
		android:layout_marginBottom="10dip" android:hint="your friend's email"
		android:inputType="text" android:maxLines="1" />
	<EditText android:id="@+id/invite_box" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_marginLeft="10dip"
		android:layout_marginRight="10dip" android:layout_marginTop="10dip"
		android:hint="your personal message" android:lines="5"
		android:gravity="top|left" />
	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_margin="10dip"
		style="@style/BlackShadowedFont" android:textSize="10px"
		android:gravity="center"
		android:text="You can add an optional message to your friend. Tapping on the button below will send out the invite." />
	<Button android:id="@+id/btn_invite_companion" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_gravity="bottom|center_horizontal"
		style="@style/BigRoundButton" android:text="Invite Friend" android:layout_marginTop="20dip" />
</LinearLayout>