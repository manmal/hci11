<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:questo="http://schemas.android.com/apk/res/com.questo.android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical">
	<com.questo.android.view.TopBar
		android:id="@+id/topbar" android:layout_width="fill_parent"
		android:layout_height="wrap_content" questo:label="@string/app_name"
		questo:label_centered="true" />
	<GridView xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/homeGrid" android:layout_width="fill_parent"
		android:background="@drawable/bg_papyrus" android:layout_height="wrap_content"
		android:paddingTop="30dp" android:paddingBottom="30dp"
		android:paddingLeft="10dp" android:paddingRight="10dp"
		android:verticalSpacing="30dp" android:horizontalSpacing="10dp"
		android:numColumns="3" android:columnWidth="60dp" android:stretchMode="columnWidth"
		android:gravity="fill" android:listSelector="@android:color/transparent">
	</GridView>
	<ListView android:id="@+id/watchtower" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:background="@drawable/bg_darklist"
		android:dividerHeight="1px" android:cacheColorHint="#00000000"
		android:divider="@color/dark_separator" android:fadingEdge="vertical"
		android:fadingEdgeLength="10dp" />
	<TextView android:id="@+id/txt_empty_watchtower"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:text="The messenger has not returned, yet!" style="@style/ListPlaceholder" />
</LinearLayout>
