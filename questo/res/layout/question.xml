<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:questo="http://schemas.android.com/apk/res/com.questo.android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="#ffffff" android:id="@+id/question_layout">
	<com.questo.android.view.TopBar
		android:id="@+id/topbar" android:layout_width="fill_parent"
		android:layout_height="wrap_content" questo:label_centered="false">
	</com.questo.android.view.TopBar>
	<ProgressBar android:layout_width="fill_parent"
		android:layout_height="wrap_content" style="?android:attr/progressBarStyleHorizontal"
		android:id="@+id/progressbar" android:max="100" />
	<TextView android:id="@+id/question" android:layout_width="fill_parent"
		android:paddingTop="20dip" android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal" android:gravity="center_horizontal" android:textColor="#000"/>

</LinearLayout>