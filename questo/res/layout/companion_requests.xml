<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:questo="http://schemas.android.com/apk/res/com.questo.android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:background="@drawable/bg_papyrus" android:orientation="vertical">
	<com.questo.android.view.TopBar
		android:id="@+id/topbar" android:layout_width="fill_parent"
		android:layout_height="wrap_content" questo:label="Companion Requests"
		questo:label_centered="false" />
	<ListView android:layout_height="fill_parent"
		android:layout_width="fill_parent" android:id="@+id/requestlist"
		android:background="@color/winered_verydark" android:dividerHeight="1px"
		android:cacheColorHint="#00000000" android:divider="#2b0201"
		android:fadingEdge="vertical" android:fadingEdgeLength="10dp" />
	<TextView android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:id="@+id/empty_companionrequestlist_text"
		android:text="You have not received any new companionship requests."
		style="@style/ListPlaceholder"
		android:layout_above="@+id/newTournamentLayout" />
</LinearLayout>
